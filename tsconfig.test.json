{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "client/tests/**/*",
    "server/tests/**/*",
    "client/src/**/*",
    "server/**/*",
    "db/**/*"
  ]
}